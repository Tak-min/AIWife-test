{
  "name": "aiwife-3d-interaction",
  "version": "1.0.0",
  "description": "3D Character Interaction Web Application with AI",
  "main": "frontend/js/app.js",
  "type": "module",
  "scripts": {
    "start": "python backend/app.py",
    "dev": "concurrently \"python backend/app.py\" \"npm run watch\"",
    "watch": "chokidar \"frontend/**/*\" -c \"echo File changed: {path}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:backend": "python -m pytest tests/test_backend.py -v",
    "lint": "eslint frontend/js/*.js",
    "lint:fix": "eslint frontend/js/*.js --fix",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "serve": "http-server frontend -p 8080",
    "init-db": "python config/init_db.py",
    "init-db-sample": "python config/init_db.py --sample-data",
    "docker:build": "docker build -t aiwife-app .",
    "docker:run": "docker run -p 5000:5000 --env-file .env aiwife-app",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "ai",
    "3d",
    "vrm",
    "character",
    "interaction",
    "chat",
    "voice",
    "animation",
    "three.js",
    "websocket"
  ],
  "author": "AI Wife Development Team",
  "license": "MIT",
  "dependencies": {
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-modules": "^0.1.6",
    "@eslint/js": "^9.0.0",
    "babel-loader": "^9.1.3",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "python": ">=3.9.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "moduleNameMapping": {
      "^three$": "<rootDir>/tests/mocks/three.js",
      "^@pixiv/three-vrm$": "<rootDir>/tests/mocks/three-vrm.js",
      "^@pixiv/three-vrm-animation$": "<rootDir>/tests/mocks/three-vrm-animation.js"
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/test_*.js"
    ],
    "collectCoverageFrom": [
      "frontend/js/**/*.js",
      "!frontend/js/vendor/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    },
    "plugins": ["jest"]
  },
  "babel": {
    "presets": [
      ["@babel/preset-env", {
        "targets": {
          "browsers": ["last 2 versions"]
        }
      }]
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
